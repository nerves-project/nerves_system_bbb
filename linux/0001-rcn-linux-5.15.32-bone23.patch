+static int au_fsctx_parse_monolithic(struct fs_context *fc, void *data)
+{
+	int err;
+	unsigned int u;
+	char *str;
+	struct au_fsctx_opts *a = fc->fs_private;
+
+	str = data;
+	AuDbg("str %s\n", str);
+	while (str) {
+		u = is_colonopt(str);
+		if (u)
+			str[u] = '=';
+		str = strchr(str, ',');
+		if (!str)
+			break;
+		str++;
+	}
+	str = data;
+	AuDbg("str %s\n", str);
+
+	err = generic_parse_monolithic(fc, str);
+	AuTraceErr(err);
+	au_fsctx_dump(&a->opts);
+
+	return err;
+}
